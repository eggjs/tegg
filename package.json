{
  "name": "tegg",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/eggjs/tegg",
  "bugs": {
    "url": "https://github.com/eggjs/tegg/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:eggjs/tegg.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "lint:fix": "eslint . --ext .ts --fix --cache",
    "lint": "npm run oxlint && eslint . --ext .ts --cache",
    "oxlint": "oxlint",
    "test": "vitest",
    "test:mocha": "npm run test -w plugin/tegg",
    "bump": "lerna version --conventional-commits --sign-git-commit --sign-git-tag --force-publish",
    "pub": "lerna publish from-git",
    "pub-canary": "lerna publish --canary",
    "clean": "lerna run --parallel clean",
    "clean-workspaces": "npm run clean --workspaces --if-present",
    "prepare-test": "lerna run --parallel prepare-test",
    "tsc": "lerna run tsc",
    "tsc-workspaces": "npm run tsc --workspaces --if-present",
    "tsc:pub": "lerna run tsc:pub",
    "tsc:pub-workspaces": "npm run tsc:pub --workspaces --if-present",
    "coverage": "vitest run --coverage core/* plugin/common plugin/config",
    "coverage:mocha": "npm run cov --workspaces --if-present",
    "preci": "npm run clean && npm run lint",
    "ci": "npm run coverage && npm run coverage:mocha",
    "postci": "npm run tsc:pub && npm run clean"
  },
  "author": "killagu <killa123@126.com>",
  "license": "MIT",
  "devDependencies": {
    "@eggjs/tsconfig": "^1.0.0",
    "@vitest/coverage-v8": "^3.0.5",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "eslint-config-egg": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-oxlint": "^0.15.12",
    "lerna": "^6.1.0",
    "oxlint": "^0.15.12",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "vite-plugin-swc-transform": "^1.1.0",
    "vitest": "^3.0.5"
  },
  "workspaces": [
    "core/*",
    "plugin/*",
    "standalone/*"
  ]
}
